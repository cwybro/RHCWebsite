-if @location.image.present?
    =image_tag(@location.image.url(:header), :alt => %Q"#{@location.title} header image", :class => 'cover-img')

.container-fluid
    .row.top-spacing
        .col-6
            .header #{@location.title}
            .section-subtitle #{@location.address}
            %hr
            .section-title About
            .section-subtitle #{@location.description}
        .col-6.text-center
            -if @google_src
                %iframe{:width => "100%",
                    :height => "300", :frameborder => "0",
                    :style => "border:0",
                    :src => @google_src}

    .top-spacing
        =link_to 'Back to locations', locations_path, class: 'btn btn-outline-secondary btn-sm'
        -if @admin
            = link_to "Edit location", edit_location_path(@location), class: 'btn btn-primary btn-sm'
