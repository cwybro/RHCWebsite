= form_for [@event, @event_recap] do |f|
  - if @event_recap.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event_recap.errors.count, "error")} prohibited this event_recap from being saved:"
      %ul
        - @event_recap.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :attendance
    = f.number_field :attendance
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
