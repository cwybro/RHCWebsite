.field.form-group
  =form.hidden_field :user_id, :value => current_user.id
  
  =form.label :title, "Title"
  =form.text_field :title, required: :true, class: 'form-control'

.field.form-group
  =form.label :description, "Description"
  =form.text_field :description, required: :true, class: 'form-control'

.field.form-group
  =form.label :address, "Address"
  =form.text_field :address, required: :true, class: 'form-control'

.field.form-group
  = form.label :datetime, "Date and Time"
  = form.datetime_field :datetime, required: :true, class: 'form-control'

.field.form-group
  = form.label :image, "Event Image"
  = form.file_field :image, required: :false
